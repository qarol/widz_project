#box
  #box_title Dane przedmiotu
  #box_content
    - form_for [:admin, @subject] do |f|
      = f.error_messages
      %h1 Dane przedmiotu
      %table
        %tr.odd
          %th.form_title Przedmiot
          %td.form_content= @subject.subject_name_name
        %tr.even
          %th.form_title Semestr
          %td.form_content= (h @subject.semester_school_year) + " (" + (h @subject.semester_h_semester) + ")"
        %tr.odd
          %th.form_title Nauczyciel
          %td.form_content= link_to (h @subject.user_name + " " + (h @subject.user_lastname)), admin_user_path(@subject.user) unless @subject.user.nil?
        %tr.even
          %th.form_title Grupa/Klasa
          %td.form_content
            - unless @subject.team.blank?
              - if @subject.team_type == "Group"
                = link_to (h @subject.team.name_of_group + " (grupa)"), admin_semester_group_path(@semester, @subject.team)
              - else
                = link_to (h @subject.team.name_of_class + " (klasa)"), admin_semester_classroom_path(@semester, @subject.team)
    %br
    %h1 Terminarz
    %table
      %tr.odd
        %th.form_title Dzień tygodnia, godzina
        %td.form_content
          = "brak " + (link_to "[dodaj termin]", edit_admin_semester_subject_path) if @lectures.blank?
          - for lecture in @lectures do
            = day_of_week(lecture.day_of_week) + ",  godz. " + lecture.order_of_the_day.start.strftime("%H:%M") + " - " + lecture.order_of_the_day.end.strftime("%H:%M")
            %br
    %br
    = link_to 'Wstecz', session[:return_to]
    |
    = link_to 'Zmień parametry przedmiotu', edit_admin_semester_subject_path
