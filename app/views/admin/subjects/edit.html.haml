#box
  #box_title Zmień parametry przedmiotu
  #box_content
    - form_for [:admin, @subject] do |f|
      = f.error_messages
      %h1 Dane przedmiotu
      %table
        %tr.odd
          %th.form_title Przedmiot
          %td.form_content
            = f.select :subject_name_id, SubjectName.all.map{|s| [s.name, s.id]}, :include_blank => '-- Wybierz przedmiot --'
            = link_to "dodaj nowy", edit_admin_preference_path(:anchor => 'add_subject_name'), :target => "_blank"
        %tr.even
          %th.form_title Semestr
          %td.form_content= f.select :semester_id, Semester.find(:all, :order => 'year DESC, semester DESC').map{|s| [s.year.to_s+"/"+(s.year+1).to_s+" "+s.h_semester, s.id]}, :include_blank => '-- Wybierz semestr --'
        %tr.odd
          %th.form_title Nauczyciel
          %td.form_content= f.select :user_id, User.teachers.map{|s| [s.name + " " + s.lastname, s.id]}, :include_blank => '-- Wybierz nauczyciela --'
        %tr.even
          %th.form_title Klasa/Grupa
          %td.form_content
            = select_tag :team_type_id, grouped_options_for_select(@team, @subject.team_type_id)
      = f.submit "Zapisz", :class => "submit"
    %br
    %h1 Terminarz
    - form_for [:admin, @lecture], :url => create_lecture_admin_subject_path do |f|
      = f.error_messages
      %table
        %tr.odd
          %th.form_title Dzień tygodnia, godzina
          %td.form_content
            = "brak" if @lectures.blank?
            - for lecture in @lectures do
              = day_of_week(lecture.day_of_week) + ",  godz. " + lecture.order_of_the_day.start.strftime("%H:%M") + " - " + lecture.order_of_the_day.end.strftime("%H:%M")
              = link_to "[usuń]", delete_lecture_admin_subjects_path(:id => @subject.id, :lecture_id  => lecture.id), :confirm => "Jesteś tego pewien?", :method => 'delete_lecture'
              %br
        %tr.even
          %th.form_title Dodaj nowy termin
          %td.form_content
            = f.select :day_of_week, [ ['Poniedziałek','1'], ['Wtorek','2'], ['Środa','3'], ['Czwartek','4'], ['Piątek','5'], ['Sobota','6'], ['Niedziela','7'] ]
            = f.select :order_of_the_day_id, OrderOfTheDay.find(:all, :order => 'start ASC').map{|o| [o.start.strftime("%H:%M") + " - " + o.end.strftime("%H:%M"), o.id]}
            = f.submit "Dodaj", :class => 'submit'
    = link_to 'Wstecz', session[:return_to]
