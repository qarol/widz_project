#box
  #box_title Dane grupy
  #box_content
    %table
      %tr.even
        %th.form_title Nazwa grupy
        %td.form_content= @group.name_of_group
      %tr.odd
        %th.form_title Liczba uczestników
        %td.form_content= @group.users.size.to_s
    %br
    %h1 Osoby należące do grupy
    %table
      %tr
        %th Nr
        %th Imię i nazwisko
      - if @users.empty?
        %tr
          %td{:colspan => 2} brak
      - else
        - @users.each_with_index do |user, index|
          %tr{:id => cycle('even','odd')}
            %td= index+1
            %td= link_to h(user.name.capitalize + " " + user.lastname.capitalize), admin_user_path(user)
    %br
    = link_to 'Wstecz', admin_groups_path
    |
    = link_to 'Edytuj informacje', edit_admin_group_path(@group)
