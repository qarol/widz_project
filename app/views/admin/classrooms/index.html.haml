#box
  #box_title Klasy
  #box_content
    %table
      %tr
        %th Nr sali
        %th Nazwa klasy
        %th Wychowawca
        %th Pokaż
        %th Edytuj
      - for classroom in @classrooms
        %tr{:id => cycle('even','odd')}
          %td= h classroom.hall
          %td= h classroom.name_of_class
          %td= h classroom.user_id
          %td= link_to "Pokaż", admin_classroom_path(classroom)
          %td= link_to "Edytuj", edit_admin_classroom_path(classroom)
    %br
    = link_to 'Wstecz', :back
    |
    = link_to 'Dodaj klasę', new_admin_classroom_path
