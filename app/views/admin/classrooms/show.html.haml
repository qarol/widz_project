#box
  #box_title Dane klasy
  #box_content
    %table
      %tr.odd
        %th.form_title Sala:
        %td.form_content= @classroom.hall
      %tr.even
        %th.form_title Aktualny rok
        %td.form_content= @classroom.current_year(params[:semester_id])
      %tr.odd
        %th.form_title Nazwa klasy:
        %td.form_content= @classroom.name_of_class
      %tr.even
        %th.form_title Rok rozpoczęcia nauki
        %td.form_content= h @classroom.year
      %tr.odd
        %th.form_title Rok zakończenia nauki
        %td.form_content= h (@classroom.year+3).to_s
      %tr.odd
        %th.form_title Wychowawca:
        %td.form_content= @classroom.educator_name.nil? ? "brak" : (link_to h(@classroom.educator_name + " " + @classroom.educator_lastname), admin_user_path(@classroom.educator))
      %tr.even
        %th.form_title Liczba uczniów
        %td.form_content= @classroom.students.size
    %br
    %h1 Uczniowe należący do klasy
    %table
      %tr
        %th Nr
        %th Imię i nazwisko
        %th Usuń z klasy
      - if @users.empty?
        %tr
          %td{:colspan => 3} brak
      - else
        - @users.each_with_index do |user, index|
          %tr{:id => cycle('even','odd')}
            %td= index+1
            %td= link_to h(user.name.capitalize + " " + user.lastname.capitalize), admin_user_path(user)
            %td= link_to "usuń", delete_user_admin_classrooms_path(:id => @classroom, :user_id => user), :confirm => "Jesteś tego pewien?", :method => :delete_user
    %br
    = link_to 'Wstecz', session[:return_to]
    |
    = link_to 'Edytuj informacje', edit_admin_classroom_path(@user)
